{
  "name": "@tetherto/wdk-wallet-btc",
  "version": "2.0.0-rc.1",
  "description": "A simple package to manage BIP-32 wallets for the bitcoin blockchain.",
  "keywords": [
    "wdk",
    "wallet",
    "bip-32",
    "bitcoin"
  ],
  "author": "Tether",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/tetherto/wdk-wallet-btc.git"
  },
  "main": "index.js",
  "type": "module",
  "types": "./types",
  "scripts": {
    "build:types": "tsc",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns tests/integration",
    "test:unit:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --testPathIgnorePatterns tests/integration",
    "test:coverage": "npm run test:unit:coverage && npm run test:integration:coverage",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:integration:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration --coverage"
  },
  "dependencies": {
    "@bitcoinerlab/coinselect": "1.3.1",
    "@bitcoinerlab/descriptors": "2.3.1",
    "@bitcoinerlab/secp256k1": "1.2.0",
    "@ledgerhq/device-management-kit": "1.0.1",
    "@ledgerhq/device-signer-kit-bitcoin": "1.2.0",
    "@ledgerhq/device-transport-kit-web-hid": "1.2.3",
    "@ledgerhq/signer-utils": "1.1.2",
    "@mempool/electrum-client": "1.1.9",
    "@tetherto/wdk-wallet": "github:claudiovb/wdk-wallet#poc-signer",
    "bare-node-runtime": "^1.1.4",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "bitcoinjs-lib": "6.1.7",
    "bitcoinjs-message": "2.2.0",
    "lru-cache": "11.2.2",
    "p-limit": "7.1.1",
    "rxjs": "7.8.2",
    "sodium-universal": "5.0.1"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "standard": "17.1.2",
    "typescript": "5.8.3",
    "zeromq": "6.4.2"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "bare": "./bare.js",
      "default": "./index.js"
    },
    "./signers": {
      "types": "./types/src/signers/index.d.ts",
      "bare": "./src/signers/bare.js",
      "default": "./src/signers/index.js"
    },
    "./signers/ledger": {
      "types": "./types/src/signers/ledger-signer-btc.d.ts",
      "default": "./src/signers/ledger-signer-btc.js"
    },
    "./package": {
      "default": "./package.json"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "standard": {
    "ignore": [
      "bare.js",
      "tests/**/*.js"
    ]
  }
}
